# Shared
NODE_ENV=development
APP_NAME=Leasebase

# API
API_PORT=4000
API_BASE_URL=http://localhost:4000

# Web
WEB_PORT=3000
WEB_BASE_URL=http://localhost:3000

# Mobile
MOBILE_API_BASE_URL=http://localhost:4000

# Database
POSTGRES_USER=leasebase
POSTGRES_PASSWORD=leasebase
POSTGRES_DB=leasebase
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://leasebase:leasebase@localhost:5432/leasebase?schema=public

# Cognito (per environment in AWS; local uses mocked or hosted Cognito)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-west-2

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# S3 / AWS
AWS_REGION=us-west-2
S3_DOCUMENTS_BUCKET=

# Multi-tenancy / domains
PRIMARY_DOMAIN=leasebase.io
DEV_DOMAIN=dev.leasebase.io
QA_DOMAIN=qa.leasebase.io
UAT_DOMAIN=uat.leasebase.io

# Misc
LOG_LEVEL=debug
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
