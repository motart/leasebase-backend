# Production Environment Bootstrap Configuration
# Copy to prod.tfvars and apply with: terraform apply -var-file=prod.tfvars

environment        = "prod"
aws_region         = "us-west-1"
vpc_cidr           = "10.30.0.0/16"
availability_zones = ["us-west-1a", "us-west-1b"]

# NAT Gateway enabled for prod (ECS tasks in private subnets)
enable_nat_gateway = true

# GitHub repository for OIDC authentication
github_repo = "motart/leasebase-backend"
